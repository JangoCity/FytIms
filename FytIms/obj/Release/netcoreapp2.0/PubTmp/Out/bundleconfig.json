// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/themes/css/bundle.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/themes/css/*.css"
    ]
  },
  {
    "outputFileName": "wwwroot/themes/js/bundle.min.js",
    "inputFiles": [
      "wwwroot/themes/js/toastr.js",
      "wwwroot/themes/js/city-picker.data.js",
      "wwwroot/themes/js/city-picker.js",
      "wwwroot/themes/js/app.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/themes/js/login.min.js",
    "inputFiles": [
      "wwwroot/themes/js/login.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
